<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <enum id="org.gnome.shell.extensions.matrix-status.ClientType">
        <value nick="web" value="0"/>
        <value nick="element" value="1"/>
        <value nick="fractal" value="2"/>
    </enum>

    <schema id="org.gnome.shell.extensions.matrix-status" path="/org/gnome/shell/extensions/matrix-status/">
        <key name="homeserver-url" type="s">
            <default>'https://matrix.org'</default>
            <summary>Homeserver URL</summary>
        </key>
        <key name="access-token" type="s">
            <default>''</default>
            <summary>API Access Token</summary>
        </key>
        <key name="sync-interval" type="i">
            <default>10</default>
            <summary>Polling interval in seconds</summary>
        </key>
        <key name="client-type" enum="org.gnome.shell.extensions.matrix-status.ClientType">
            <default>'web'</default>
            <summary>Matrix Client Type</summary>
            <description>Choose between Web (matrix.to), Element (element://) and Fractal (matrix:)</description>
        </key>
        <key name="generate-qr-code-enable" type="b">
            <default>false</default>
            <summary>Enable QR Code generation</summary>
            <description>If enabled, a button to show a QR code for the room/user will be displayed.</description>
        </key>
    </schema>
</schemalist>